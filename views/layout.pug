doctype html 
html(lang="es")
    head 
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title 
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/hamburgers/1.2.1/hamburgers.min.css", integrity="sha512-+mlclc5Q/eHs49oIOCxnnENudJWuNqX5AogCiqRBgKnpoplPzETg2fkgBFVC6WYUVxYYljuxPNG8RE7yBy1K+g==", crossorigin="anonymous", referrerpolicy="no-referrer")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
        link(rel="stylesheet", href="css/style.css")
        script(src="https://kit.fontawesome.com/489d45fb25.js", crossorigin="anonymous")
    
    body 

        header(class="header")
            
            a(href="index.html", class="header-logo")
                img(src="assets/trello-svgrepo-com.svg", alt="Trello")
                span Mi Organizador 
            
            nav(class="header-nav-mobile")
                button(class="hamburger hamburger--3dxy", type="button", data-bs-toggle="offcanvas", data-bs-target="#offcanvasScrolling", aria-controls="offcanvasScrolling")
                    span(class="hamburger-box")
                        span(class="hamburger-inner")

                div(class="offcanvas offcanvas-start", data-bs-scroll="true", data-bs-backdrop="false", tabindex="-1", id="offcanvasScrolling", aria-labelledby="offcanvasScrollingLabel")
                    div(class="offcanvas-header")
                        h5(class="offcanvas-title", id="offcanvasScrollingLabel") Menú
                    ul(class="offcanvas-body")
                        li 
                            img(src="assets/table-svgrepo-com.svg", alt="My space")
                            a(href="#") Mis propios tableros
                        li 
                            img(src="assets/table-svgrepo-com.svg", alt="My space")
                            a(href="#") Tableros automáticos
                        li 
                            img(src="assets/table-svgrepo-com.svg", alt="My space")
                            a(href="#") Calendario
                        li 
                            img(src="assets/out-administration-control-edit-option-setting-svgrepo-com.svg", alt="Out")
                            a(href="#") Cerrar Sesión
    
        main(class="main")
            h1= titleView 
            p= descriptionView

            block content

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
        script(src="js/script.js", type="module")